# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.go]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.proto]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
